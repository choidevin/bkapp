

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Users</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Admin Users</h1>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ID (Email)</th>
                    <th scope="col">Name</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Access Level</th>
                    <th scope="col">Join Date</th>
                    <th scope="col">Last Modified</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user, index) { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= user.id_email %></td>
                        <td><%= user.name %></td>
                        <td><%= user.phone %></td>
                        <td><%= user.level %></td>
                        <td><%= user.first_date.toISOString().slice(0, 10) %></td>
                        <td><%= user.change_date.toISOString().slice(0, 10) %></td>
                        <td>
                            <a href="/admin_users/edit/<%= user.uuid %>" class="btn btn-primary btn-sm">Edit</a>
                            <form action="/admin_users/delete/<%= user.uuid %>" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/admin_users/new" class="btn btn-success">Add New User</a>
    </div>
    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




